<section>
  <div class="container">
<div class="row d-flex justify-content-center">
  <div class="page-header">
    <h1>お問い合わせ</h1>
  </div>
</div>

<div class="row d-flex justify-content-center">
  <div class="col-12">
    <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
      <table class="table">
        <tr>
          <th>名前</th>
          <td>
            <%= f.hidden_field :name %>
            <%= @inquiry.name %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= f.hidden_field :email %>
            <%= @inquiry.email %>
          </td>
        </tr>
        <tr>
          <th>題名</th>
          <td>
            <%= f.hidden_field :subject %>
            <%= @inquiry.subject %>
          </td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td>
            <%= f.hidden_field :message %>
            <%= simple_format(@inquiry.message) %>
          </td>
        </tr>
      </table>
      <div class="d-flex justify-content-center">
        <%= f.submit '送信', :class => 'btn btn-original' %>
      </div>

    <% end %>
  </div>

</div>


  </div>
</section>
