<p id="notice"><%= notice %></p>


<main>
  <div class="album py-5 bg-light">
    <div class="container">
<h1>Posts</h1>
<!-- ////// -->
<h1>記事検索</h1>
<%= search_form_for @q do |f| %>
<div class="input-group mb-3">

  <%= f.search_field :title_cont, placeholder: "記事を検索...", class: "form-control" %>

  <div class="input-group-append">
    <%= button_tag '<i class="fa fa-search"></i>'.html_safe, :type => "submit",
     :class =>"btn btn-default btn-outline-secondary" %>

  </div>

</div>
  <% end %>





        <!-- <button class="btn btn-default" type="submit">
          <i class='glyphicon glyphicon-search'></i>
        </button> -->








<!-- //// -->
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% @posts.each do |post| %>
        <div class="col">
          <div class="card shadow-sm">
            <!-- <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> -->
            <% if post.image.attached? %>
            <%= image_tag post.image %>
            <% end %>
            <div class="card-body">
              <h3><%= post.title %></h3>
              <p class="card-text"><%= post.created_at.to_s(:datetime_jp) %></p>
              <p class="card-text"><%= strip_tags(post.content.to_s).gsub(/[\n]/,"").strip.truncate(15) %></p>
              <div class="d-flex justify-content-between align-items-center">

            <%= link_to "Read More", post_path(post), class: "btn" %>
  <br>
                <div class="btn-group">
                  <%= link_to 'Edit', edit_post_path(post), class: "btn" %>
                  <!-- <button type="button" class="btn btn-sm btn-outline-secondary">View</button> -->
                  <%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %>
                  <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
                </div>

              </div>
            </div>
          </div>
        </div>
          <% end %>


<!-- //////////// -->











      </div>
      <br>
      <br>
      <div class="paginationdisplay">
  <%= paginate @posts %>
      </div>

    </div>
  </div>

</main>
